<!--suppress HtmlUnknownTarget -->
<main>
  <h1 class="title">Search</h1>

  <div class="search">
    <div class="input">
      <form class="search-text-box" action="/search" method="post">
        <input type="text" name="query" value="" placeholder="Enter tag here">
        <button type="submit" name="submit-button">Submit</button>
      </form>
    </div>
    <div class="saved-searches-link">
      <a href="/savedSearches">Saved Searches</a>
    </div>
  </div>

  <div class="table">

    {{#if tag}}
      <form class="tag input" action="/savedSearches/add" method="post">
        <h2 class="tag-name">#{{tag}}</h2>
        <button class="tag-button" type="submit" name="add" value="{{tag}}">Save</button>
      </form>
    {{/if}}

    {{>feed}}

  </div>
</main>
